<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Booking Confirm</title>
  <style>
    /* Basic styles for the table */
    #booking-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    #booking-table th, #booking-table td {
      padding: 10px;
      border: 1px solid #ddd;
    }

    #booking-table th {
      background-color: #f4f4f4;
    }

    /* Popup styles */
    .popup {
      display: none; /* Hidden by default */
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      justify-content: center;
      align-items: center;
    }

    .popup-content {
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      width: 400px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .popup-buttons {
      margin-top: 10px;
    }

    .popup-buttons button {
      padding: 10px 15px;
      margin-right: 10px;
      cursor: pointer;
    }

    .close-popup {
      margin-top: 10px;
      background-color: #f44336;
      color: white;
      border: none;
      padding: 10px 15px;
      cursor: pointer;
      width: 100%;
    }
  </style>
</head>
<body>

  <h2>Thông Tin Xác Nhận Đặt Phòng</h2>

  <!-- Bảng hiển thị thông tin booking -->
  <table id="booking-table">
    <thead>
      <tr>
        <th>Tên Homestay</th>
        <th>Tên Khách</th>
        <th>Email</th>
        <th>Tổng Tiền</th>
        <th>Hành Động</th>
      </tr>
    </thead>
    <tbody id="booking-list">
      <!-- Booking rows sẽ được thêm qua JavaScript -->
    </tbody>
  </table>

  <!-- Popup chi tiết booking -->
  <div id="booking-details-popup" class="popup">
    <div class="popup-content">
      <h3>Thông Tin Đặt Phòng</h3>
      <p><strong>Booking ID:</strong> <span id="popup-booking-id"></span></p>
      <p><strong>Người Đặt:</strong> <span id="popup-fullname"></span></p>
      <p><strong>Email:</strong> <span id="popup-email"></span></p>
      <p><strong>Tên Homestay:</strong> <span id="popup-homestay-name"></span></p>
      <p><strong>Ngày Check-in:</strong> <span id="popup-checkin"></span></p>
      <p><strong>Ngày Check-out:</strong> <span id="popup-checkout"></span></p>
      <p><strong>Số Người Lớn:</strong> <span id="popup-adults"></span></p>
      <p><strong>Số Trẻ Em:</strong> <span id="popup-children"></span></p>
      <p><strong>Tổng Tiền:</strong> <span id="popup-total"></span></p>
      <div class="popup-buttons">
        <button id="confirm-booking">Xác Nhận Đặt Phòng</button>
        <button id="cancel-booking">Hủy Đặt Phòng</button>
      </div>
      <button id="close-popup" class="close-popup">Đóng</button>
    </div>
  </div>

  <script>
    // Hàm lấy dữ liệu từ API và hiển thị trên bảng
    async function loadBookings() {
      try {
        const response = await fetch('/api/bookings/pendingbyhost', {
          method: 'GET',
          headers: {
            'Authorization': 'Bearer ' + localStorage.getItem('token') // Giả sử bạn lưu token ở localStorage
          }
        });
        const bookings = await response.json();
        const bookingList = document.getElementById('booking-list');
        bookingList.innerHTML = ''; // Xóa danh sách cũ

        // Duyệt qua danh sách booking và thêm vào bảng
        bookings.forEach(booking => {
          const row = document.createElement('tr');
          row.classList.add('booking-row');
          row.dataset.bookingId = booking.booking_id;

          row.innerHTML = ` 
            <td>${booking.homestay_name}</td>
            <td>${booking.guest_name}</td>
            <td>${booking.guest_email}</td>
            <td>${booking.total_amount}</td>
            <td><button class="view-details">Xem Chi Tiết</button></td>
          `;
          bookingList.appendChild(row);

          // Gắn sự kiện cho nút "Xem Chi Tiết" mới tạo
          row.querySelector('.view-details').addEventListener('click', () => {
            // Lấy dữ liệu booking từ row
            const bookingId = row.dataset.bookingId;
            const fullname = row.cells[1].textContent;
            const email = row.cells[2].textContent;
            const homestayName = row.cells[0].textContent;
            const total = row.cells[3].textContent;

            // Set dữ liệu cho popup
            document.getElementById('popup-booking-id').textContent = bookingId;
            document.getElementById('popup-fullname').textContent = fullname;
            document.getElementById('popup-email').textContent = email;
            document.getElementById('popup-homestay-name').textContent = homestayName;
            document.getElementById('popup-checkin').textContent = "01/01/2025";  // Ví dụ ngày
            document.getElementById('popup-checkout').textContent = "05/01/2025"; // Ví dụ ngày
            document.getElementById('popup-adults').textContent = "2";  // Ví dụ số người lớn
            document.getElementById('popup-children').textContent = "1"; // Ví dụ số trẻ em
            document.getElementById('popup-total').textContent = total;

            // Hiển thị popup
            const popup = document.getElementById('booking-details-popup');
            popup.style.display = 'flex';
          });
        });
      } catch (error) {
        alert('Không thể tải dữ liệu bookings');
      }
    }

    // Đóng popup
    document.getElementById('close-popup').addEventListener('click', () => {
      const popup = document.getElementById('booking-details-popup');
      popup.style.display = 'none';
    });

    // Xử lý xác nhận đặt phòng
    document.getElementById('confirm-booking').addEventListener('click', async () => {
      const bookingId = document.getElementById('popup-booking-id').textContent;
      try {
        const response = await fetch(`/api/bookings/${bookingId}/status`, {
          method: 'PUT',
          headers: {
            'Authorization': 'Bearer ' + localStorage.getItem('token'), // Token từ localStorage
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ status: 'confirmed' }) // Gửi yêu cầu cập nhật trạng thái là 'confirmed'
        });
        const data = await response.json();
        if (data.message === 'Booking status updated successfully') {
          alert('Đặt phòng đã được xác nhận!');
          document.getElementById('booking-details-popup').style.display = 'none';
          loadBookings(); // Tải lại danh sách bookings
        } else {
          alert('Lỗi xác nhận đặt phòng');
        }
      } catch (error) {
        alert('Lỗi khi xác nhận đặt phòng');
      }
    });

    // Hủy đặt phòng
    document.getElementById('cancel-booking').addEventListener('click', async () => {
      const bookingId = document.getElementById('popup-booking-id').textContent;
      try {
        const response = await fetch(`/api/bookings/${bookingId}/status`, {
          method: 'PUT',
          headers: {
            'Authorization': 'Bearer ' + localStorage.getItem('token'),
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ status: 'cancelled' }) // Gửi yêu cầu cập nhật trạng thái là 'cancelled'
        });
        const data = await response.json();
        if (data.message === 'Booking status updated successfully') {
          alert('Đặt phòng đã bị hủy!');
          document.getElementById('booking-details-popup').style.display = 'none';
          loadBookings(); // Tải lại danh sách bookings
        } else {
          alert('Lỗi hủy đặt phòng');
        }
      } catch (error) {
        alert('Lỗi khi hủy đặt phòng');
      }
    });

    // Khi trang đã tải xong, gọi hàm để hiển thị danh sách booking
    document.addEventListener('DOMContentLoaded', () => {
      loadBookings(); // Load dữ liệu bookings khi trang tải
    });
  </script>

</body>
</html>
